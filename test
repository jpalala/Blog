    /**
     * Get all posts from the Markdown directory.
     */
    public function getAllPosts()
    {
        $posts = [];
        $files = File::files($this->directory);

        foreach ($files as $file) {
            $post = $this->parseFile($file->getPathname());
            if ($post) {
                $posts[] = $post;
            }
        }

        return collect($posts)->sortByDesc('date');
    }


